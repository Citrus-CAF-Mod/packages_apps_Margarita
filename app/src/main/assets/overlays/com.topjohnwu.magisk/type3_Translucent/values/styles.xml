<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@*com.topjohnwu.magisk:style/Theme.AppCompat.NoActionBar">
        <item name="*com.topjohnwu.magisk:colorPrimary">@*android:color/holo_blue_bright</item>
        <item name="*com.topjohnwu.magisk:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="*com.topjohnwu.magisk:colorAccent">@*com.topjohnwu.magisk:color/accent</item>
        <item name="*com.topjohnwu.magisk:colorAccentFallback">@*com.topjohnwu.magisk:color/accentFallback</item>
        <item name="*com.topjohnwu.magisk:windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="*com.topjohnwu.magisk:cardStyle">@*com.topjohnwu.magisk:style/CardViewStyle.Light</item>
        <item name="*com.topjohnwu.magisk:windowActionBar">false</item>
        <item name="*com.topjohnwu.magisk:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="*com.topjohnwu.magisk:imageColorTint">@*android:color/holo_blue_bright</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="AppTheme.Dark" parent="@*com.topjohnwu.magisk:style/Theme.AppCompat.NoActionBar">
        <item name="*com.topjohnwu.magisk:colorPrimary">@*android:color/holo_blue_bright</item>
        <item name="*com.topjohnwu.magisk:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="*com.topjohnwu.magisk:colorAccent">@*com.topjohnwu.magisk:color/accent</item>
        <item name="*com.topjohnwu.magisk:colorAccentFallback">@*com.topjohnwu.magisk:color/accentFallback</item>
        <item name="*com.topjohnwu.magisk:windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="*com.topjohnwu.magisk:cardStyle">@*com.topjohnwu.magisk:style/CardViewStyle.Dark</item>
        <item name="*com.topjohnwu.magisk:windowActionBar">false</item>
        <item name="*com.topjohnwu.magisk:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorSecondary">@*com.topjohnwu.magisk:color/dark_secondary_text</item>
        <item name="*com.topjohnwu.magisk:imageColorTint">@*android:color/holo_blue_bright</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="CardViewStyle.Light" parent="@*com.topjohnwu.magisk:style/CardView">
        <item name="*com.topjohnwu.magisk:cardBackgroundColor">@*android:color/background_holo_dark</item>
    </style>

    <style name="CardViewStyle.Dark" parent="@*com.topjohnwu.magisk:style/CardView">
        <item name="*com.topjohnwu.magisk:cardBackgroundColor">@*android:color/background_holo_dark</item>
    </style>

</resources>
