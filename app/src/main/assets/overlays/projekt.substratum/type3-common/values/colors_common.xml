<resources>
    <!-- main theme colors -->
    <color name="colorAccent">@*android:color/holo_blue_bright</color>
    <color name="colorRipple">@*android:color/ripple_material_dark</color>

    <!-- Hardcode the colors so it doesn't change every time an Android System overlay changes -->
    <color name="floatui_dialog_button_color">@*android:color/holo_blue_bright</color>

    <!-- sheet dialog bg -->
    <color name="bottom_sheet_dialog_icons">@*android:color/holo_blue_bright</color>
    <color name="bottom_sheet_dialog_icons_night">@*android:color/holo_blue_bright</color>
    <color name="bottom_sheet_dialog_text">@android:color/white</color>
    <color name="bottom_sheet_dialog_text_night">@android:color/white</color>

    <color name="priorities_drag_handle">@android:color/white</color>

    <color name="number_progress_bar_validation_success">@*android:color/holo_blue_bright</color>

    <color name="bootanimation_placeholder_tint">@*android:color/holo_blue_bright</color>

    <color name="sounds_placeholder_tint">@*android:color/holo_blue_bright</color>
    <color name="sounds_play_pause_button_tint">@*android:color/holo_blue_bright</color>

    <color name="backup_button_text_color">@*android:color/white</color>
    <color name="restore_button_text_color">@*android:color/white</color>

    <!-- used for sheet -->
    <color name="main_screen_card_theme_title">#ffffffff</color>

    <!-- Theme info card shown when long pressed a theme -->
    <color name="theme_information_card_subtext">@android:color/white</color>

    <!-- Drawer menu -->
    <color name="material_drawer_icon_color">#ffffffff</color>

    <!-- FAB -->
    <color name="fab_menu_icon_color">@*android:color/holo_blue_bright</color>
    <color name="fab_menu_text_color">@*android:color/white</color>
    <color name="fab_menu_divider">@*android:color/holo_blue_bright</color>
    <color name="fab_background_color">@*android:color/holo_blue_bright</color>

    <!-- menu item background and text color -->
    <color name="primary_text_default_material_light">#ffffff</color>

    <!-- Bottom navigation bar -->
    <color name="bb_inActiveBottomBarItemColor">#ffaaaaaa</color>
    <color name="bottombar_icon_inactive_tint">#64ffffff</color>

    <color name="main_activity_alert_button_color">@*android:color/holo_blue_bright</color>

    <!-- Snackbar -->
    <color name="lunchbar_text">@android:color/white</color>

    <!-- overlays card -->
    <color name="overlay_not_installed_list_entry">#81ffffff</color>
    <color name="overlay_update_available">@*android:color/holo_blue_bright</color>

</resources>
