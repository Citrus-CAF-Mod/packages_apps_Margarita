<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SystemUI.Dialog" parent="@android:style/Theme.Material.Dialog" />
    <style name="Theme.SystemUI.Dialog.Alert" parent="@*android:style/Theme.Material.Dialog.Alert" />

    <style name="TextAppearance.NotificationGuts" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:fontFamily">roboto-regular</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Secondary" parent="">
        <item name="android:textColor">#ffdddddd</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Primary" parent="">
        <item name="android:textSize">16.sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Radio" parent="">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- qs panel -> add tiles page -->
    <style name="edit_theme" parent="@android:style/Theme.Material">
        <item name="android:colorPrimary">@*android:color/holo_primary_dark</item>
    </style>

    <!-- Phyisical Keyboard Dialog style -->
    <style name="KeyboardShortcutsDialog" parent="@*android:style/Theme.Material" />

    <style name="qs_base" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorSecondary">?android:attr/colorSecondary</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="android:colorBackgroundFloating">@*android:color/holo_gray_bright</item>
    </style>

</resources>