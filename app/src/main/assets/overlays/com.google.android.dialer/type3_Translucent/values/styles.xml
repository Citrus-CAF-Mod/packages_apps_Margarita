<resources>

    <style name="Dialer.Dark.ThemeBase.NoActionBar" parent="@*com.google.android.dialer:style/Dialer.Dark.ThemeBase">
        <item name="*com.google.android.dialer:windowActionBar">false</item>
        <item name="*com.google.android.dialer:windowNoTitle">true</item>
        <item name="android:windowBackground">@*android:color/background_holo_dark</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="*com.google.android.dialer:actionOverflowButtonStyle">@*com.google.android.dialer:style/wideActionButton</item>
        <item name="android:navigationBarColor">@*android:color/holo_primary_dark</item>
        <item name="android:windowElevation">0.5dip</item>
    </style>

    <style name="MainActivityTheme" parent="@*com.google.android.dialer:style/MainActivityTheme.Dark">
        <item name="android:colorPrimary">@*com.google.android.dialer:color/google_grey_400</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:windowBackground">@*android:color/background_holo_dark</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="*com.google.android.dialer:colorPrimary">@*com.google.android.dialer:color/google_grey_400</item>
        <item name="*com.google.android.dialer:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:navigationBarColor">@*android:color/holo_primary_dark</item>
    </style>

</resources>
