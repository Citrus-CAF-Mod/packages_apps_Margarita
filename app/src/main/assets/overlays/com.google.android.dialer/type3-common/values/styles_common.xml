<resources>

    <style name="Dialer.ThemeBase.NoActionBar" parent="@*com.google.android.dialer:style/Dialer.Dark.ThemeBase.NoActionBar">
        <item name="*com.google.android.dialer:windowActionBar">false</item>
        <item name="*com.google.android.dialer:windowNoTitle">true</item>
        <item name="*com.google.android.dialer:actionOverflowButtonStyle">@*com.google.android.dialer:style/wideActionButton</item>
    </style>

    <style name="Dialpad.Themed" parent="@*com.google.android.dialer:style/Dialpad">
        <item name="*com.google.android.dialer:dialpad_text_color">?android:attr/textColorPrimary</item>
        <item name="*com.google.android.dialer:dialpad_text_color_primary">@*android:color/holo_blue_bright</item>
        <item name="*com.google.android.dialer:dialpad_text_color_secondary">?android:attr/textColorSecondary</item>
        <item name="*com.google.android.dialer:dialpad_background">?android:attr/colorBackgroundFloating</item>
    </style>

    <style name="Theme.InCallScreen" parent="@*com.google.android.dialer:style/Dialer.Dark.ThemeBase.NoActionBar">
        <item name="android:windowBackground">@*com.google.android.dialer:drawable/abc_ic_star_black_48dp</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode">never</item>
        <item name="android:windowTranslucentNavigation">true</item> <!-- Temp added to fix hardcoded navigationbar color -->
        <item name="*com.google.android.dialer:dialpad_style">@*com.google.android.dialer:style/InCallDialpad</item>
        <item name="*com.google.android.dialer:dialpad_key_button_touch_tint">@*com.google.android.dialer:color/dialer_light_theme_color_20pct</item>
    </style>

    <style name="Theme.InCallScreen.Dark" parent="@*com.google.android.dialer:style/Dialer.Dark.ThemeBase.NoActionBar">
        <item name="android:windowBackground">@*com.google.android.dialer:drawable/abc_ic_star_black_48dp</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode">never</item>
        <item name="android:windowTranslucentNavigation">true</item> <!-- Temp added to fix hardcoded navigationbar color -->
        <item name="*com.google.android.dialer:dialpad_style">@*com.google.android.dialer:style/InCallDialpad</item>
        <item name="*com.google.android.dialer:dialpad_key_button_touch_tint">@*com.google.android.dialer:color/dialer_dark_theme_color_20pct</item>
    </style>

</resources>
