<resources>

    <style name="SecurityPreferenceButtonContainer"
           parent="@android:style/Widget.Material.SegmentedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2</item>
        <item name="android:dividerPadding">8dip</item>
    </style>
    <style name="SecurityPreferenceButton"
           parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SuggestionCardIcon">
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">@*com.android.settings:dimen/suggestion_card_icon_side_margin</item>
        <item name="android:layout_marginEnd">@*com.android.settings:dimen/suggestion_card_icon_side_margin</item>
        <item name="android:tint">@android:color/holo_blue_bright</item>
    </style>

</resources>
