<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="AlertDialogCustom" parent="@*com.android.dialer:style/Theme.AppCompat.Dialog.Alert">
        <item name="android:colorPrimary">@*android:color/holo_blue_light</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert" parent="@*com.android.dialer:style/Base.Theme.AppCompat.Dialog.Alert" />

    <style name="AppBarTheme" parent="@*com.android.dialer:style/Theme.AppCompat">
        <item name="android:colorPrimary">@*android:color/holo_blue_light</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
    </style>

    <style name="DialerThemeBase" parent="@*com.android.dialer:style/Theme.AppCompat">
        <item name="android:textColorPrimary">@*com.android.dialer:color/dialer_primary_text_color</item>
        <item name="android:textColorSecondary">@*com.android.dialer:color/dialer_secondary_text_color</item>
        <item name="android:textAppearanceButton">@*com.android.dialer:style/DialerButtonTextStyle</item>
        <item name="android:actionBarStyle">@*com.android.dialer:style/DialerActionBarBaseStyle</item>
        <item name="android:actionBarSize">@*com.android.dialer:dimen/action_bar_height</item>
        <item name="android:alertDialogTheme">@*com.android.dialer:style/AlertDialogTheme</item>
        <item name="android:colorControlActivated">@*android:color/holo_blue_bright</item>
        <item name="android:colorButtonNormal">@*android:color/holo_blue_bright</item>
        <item name="android:colorPrimary">@*android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_blue_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="*com.android.dialer:actionBarSize">@*com.android.dialer:dimen/action_bar_height</item>
        <item name="*com.android.dialer:actionBarStyle">@*com.android.dialer:style/DialerActionBarBaseStyle</item>
        <item name="android:navigationBarColor">@*android:color/holo_blue_light</item>
    </style>
    <style name="DialerThemeBase.NoActionBar" parent="@*com.android.dialer:style/Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@*com.android.dialer:color/dialer_primary_text_color</item>
        <item name="android:textColorSecondary">@*com.android.dialer:color/dialer_secondary_text_color</item>
        <item name="android:textAppearanceButton">@*com.android.dialer:style/DialerButtonTextStyle</item>
        <item name="android:alertDialogTheme">@*com.android.dialer:style/AlertDialogTheme</item>
        <item name="android:colorControlActivated">@*android:color/holo_blue_bright</item>
        <item name="android:colorButtonNormal">@*android:color/holo_blue_bright</item>
        <item name="android:colorPrimary">@*android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_blue_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:navigationBarColor">@*android:color/holo_blue_light</item>
    </style>

    <style name="NuiMainActivityTheme" parent="@*com.android.dialer:style/Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@*android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_blue_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:navigationBarColor">@*android:color/holo_blue_light</item>
    </style>

    <!-- Theme for the InCallActivity activity. Should have a transparent background for the
     circular reveal animation for a new outgoing call to work correctly. We don't just use
     Theme.Black.NoTitleBar directly, since we want any popups or dialogs from the
     InCallActivity to have the correct Material style. -->
    <style name="Theme.InCallScreen" parent="@*com.android.dialer:style/Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#DDFFFFFF</item>
        <item name="android:colorPrimary">@*android:color/holo_blue_light</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_blue_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="*com.android.dialer:dialpad_key_button_touch_tint">@*com.android.dialer:color/incall_dialpad_touch_tint</item>
        <item name="*com.android.dialer:dialpad_style">@*com.android.dialer:style/InCallDialpad</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:alertDialogTheme">@*com.android.dialer:style/AlertDialogTheme</item>
        <item name="android:windowBackground">@*com.android.dialer:drawable/incall_background_gradient</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:backgroundTint">@*android:color/background_dark</item>
    </style>

    <style name="Theme.AppCompat.Light" parent="@*com.android.dialer:style/Base.Theme.AppCompat">
        <item name="*com.android.dialer:colorPrimary">@*android:color/holo_blue_light</item>
        <item name="*com.android.dialer:colorPrimaryDark">@*android:color/holo_blue_dark</item>
        <item name="*android:colorPrimary">@*android:color/holo_blue_light</item>
        <item name="*android:colorPrimaryDark">@*android:color/holo_blue_dark</item>
        <item name="*android:windowBackground">@*android:color/background_dark</item>
        <item name="android:navigationBarColor">@*android:color/holo_blue_light</item>
    </style>

</resources>
