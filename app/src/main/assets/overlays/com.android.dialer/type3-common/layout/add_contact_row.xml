<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@*com.android.dialer:id/click_target"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@*com.android.dialer:dimen/row_height"
    android:layout_marginTop="8dp"
    android:layout_marginStart="@*com.android.dialer:dimen/header_width"
    android:layout_marginEnd="@*com.android.dialer:dimen/row_end_margin"
    android:paddingTop="@*com.android.dialer:dimen/row_top_bottom_padding"
    android:paddingBottom="@*com.android.dialer:dimen/row_top_bottom_padding"
    android:paddingStart="@*com.android.dialer:dimen/row_start_padding"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@*com.android.dialer:id/photo"
        android:layout_width="@*com.android.dialer:dimen/photo_size"
        android:layout_height="@*com.android.dialer:dimen/photo_size"
        android:src="@*com.android.dialer:drawable/quantum_ic_person_add_white_24"
        android:tint="@*android:color/holo_blue_bright"
        android:scaleType="center"/>

    <TextView
        android:id="@*com.android.dialer:id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@*com.android.dialer:dimen/text_padding_start"
        android:paddingEnd="@*com.android.dialer:dimen/text_padding_end"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:text="@*com.android.dialer:string/all_contacts_empty_add_contact_action"
        style="@*com.android.dialer:style/PrimaryText"/>
</LinearLayout>
