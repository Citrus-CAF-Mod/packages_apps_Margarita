<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="system_notification_accent_color">@android:color/holo_blue_bright</color>
    <color name="accent_material_light">@android:color/holo_blue_bright</color>
    <color name="accent_material_dark">@android:color/holo_blue_bright</color>
    <color name="transparent">#00000000</color>

    <!-- Our changes starts -->
    <!-- Notification panel default color -->
    <color name="notification_ambient_icon_default_color">@android:color/white</color>
    <color name="notification_default_color">@*android:color/holo_blue_bright</color>
    <color name="notification_default_color_light">@*android:color/holo_blue_bright</color>
    <color name="notification_default_color_dark">@*android:color/holo_blue_bright</color>
    <color name="notification_icon_default_color">@*android:color/holo_blue_bright</color>
    <color name="notification_progress_background_color">@*android:color/secondary_text_material_dark</color>
    <color name="notification_primary_text_color_light">@*android:color/primary_text_default_material_dark</color>
    <color name="notification_secondary_text_color_light">@*android:color/primary_text_default_material_dark</color>

    <!-- Immersive cling -->
    <color name="immersive_cling_text_color">@*android:color/primary_text_default_material_dark</color>
    <color name="immersive_cling_button_text_color">@*android:color/holo_blue_bright</color>

    <!-- App permission tint -->
    <color name="app_permission_icon_tint">@*android:color/holo_blue_bright</color>

    <!-- Toast text and bg colors -->
    <color name="toast_text_color">@*android:color/primary_text_default_material_dark</color>

    <!-- Tooltip background and text colors -->
    <color name="tooltip_text_light">#ffffff</color>
    <color name="tooltip_text_dark">#ffffff</color>

    <!-- Date and time picker -->
    <color name="datepicker_default_normal_text_color_material_light">@android:color/white</color>
    <color name="timepicker_default_text_color_material">@android:color/white</color>

    <!-- Notification background -->
    <color name="notification_material_background_color">@*android:color/holo_blue_light</color>

</resources>
