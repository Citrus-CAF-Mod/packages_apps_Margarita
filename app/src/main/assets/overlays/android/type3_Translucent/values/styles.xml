<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme used for the intent picker activity. -->
    <style name="Theme.DeviceDefault.Resolver" parent="@android:style/Theme.Material">
        <item name="android:windowEnterTransition">@empty</item>
        <item name="android:windowExitTransition">@empty</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@*android:color/transparent</item>
        <item name="android:navigationBarColor">@*android:color/holo_primary_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorControlActivated">@*android:color/holo_primary_dark</item>
        <item name="android:listPreferredItemPaddingStart">?android:attr/dialogPreferredPadding</item>
        <item name="android:listPreferredItemPaddingEnd">?android:attr/dialogPreferredPadding</item>
        <!-- Color palette -->
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorError">@*android:color/error_color_device_default_dark</item>
        <!-- Dialog attributes -->
        <item name="android:dialogCornerRadius">@*android:dimen/config_dialogCornerRadius</item>
        <item name="android:alertDialogTheme">@*android:style/Theme.DeviceDefault.Dialog.Alert</item>
        <!-- Button styles -->
        <item name="android:buttonCornerRadius">@*android:dimen/config_buttonCornerRadius</item>
        <item name="android:buttonBarButtonStyle">@*android:style/Widget.DeviceDefault.Button.ButtonBar.AlertDialog</item>
        <!-- Progress bar attributes -->
        <item name="*android:colorProgressBackgroundNormal">@*android:color/config_progress_background_tint</item>
        <item name="*android:progressBarCornerRadius">@*android:dimen/config_progressBarCornerRadius</item>
        <!-- Toolbar attributes -->
        <item name="android:toolbarStyle">@*android:style/Widget.DeviceDefault.Toolbar</item>
    </style>

    <style name="Theme.DeviceDefault.QuickSettings" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorSecondary">?android:attr/colorSecondary</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorError">@*android:color/error_color_device_default_dark</item>
        <item name="android:colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="android:alertDialogTheme">@*android:style/Theme.DeviceDefault.Dialog.Alert</item>
        <!-- Text styles -->
        <item name="android:textAppearanceButton">@*android:style/TextAppearance.DeviceDefault.Widget.Button</item>
        <!-- Button styles -->
        <item name="android:buttonCornerRadius">@*android:dimen/config_buttonCornerRadius</item>
        <item name="android:buttonBarButtonStyle">@*android:style/Widget.DeviceDefault.Button.ButtonBar.AlertDialog</item>
        <!-- Progress bar attributes -->
        <item name="*android:colorProgressBackgroundNormal">@*android:color/config_progress_background_tint</item>
        <item name="*android:progressBarCornerRadius">@*android:dimen/config_progressBarCornerRadius</item>
        <!-- Toolbar attributes -->
        <item name="android:toolbarStyle">@*android:style/Widget.DeviceDefault.Toolbar</item>
        <!-- volume background -->
        <item name="android:panelColorBackground">@*android:color/holo_primary_dark</item>
    </style>

    <style name="Theme.DeviceDefault.QuickSettings.Dialog" parent="@*android:style/Theme.DeviceDefault.Dialog">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorSecondary">@*android:color/holo_primary</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorError">@*android:color/error_color_device_default_light</item>
        <item name="android:alertDialogTheme">@*android:style/Theme.DeviceDefault.Dialog.Alert</item>
        <!-- Progress bar attributes -->
        <item name="*android:colorProgressBackgroundNormal">@*android:color/config_progress_background_tint</item>
        <item name="*android:progressBarCornerRadius">@*android:dimen/config_progressBarCornerRadius</item>
        <!-- Toolbar attributes -->
        <item name="android:toolbarStyle">@*android:style/Widget.DeviceDefault.Toolbar</item>
    </style>

    <!-- styles -->
    <style name="Theme.DeviceDefault.Settings" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorPrimary">@*android:color/holo_primary_dark</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary</item>
        <item name="android:colorSecondary">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorControlNormal">@android:color/holo_blue_bright</item>
        <item name="android:navigationBarColor">@*android:color/holo_primary_dark</item>
        <item name="android:navigationBarDividerColor">@*android:color/background_holo_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:colorBackground">@*android:color/holo_primary</item>
        <item name="android:windowBackground">@*android:drawable/menuitem_background</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:actionBarTheme">@*android:style/ThemeOverlay.DeviceDefault.ActionBar.Accent</item>
        <item name="android:colorEdgeEffect">@*android:color/holo_blue_bright</item>
        <item name="android:colorError">@*android:color/error_color_device_default_dark</item>
        <item name="android:popupTheme">@*android:style/ThemeOverlay.DeviceDefault.Popup.Light</item>
        <!-- Dialog attributes -->
        <item name="android:dialogCornerRadius">@*android:dimen/config_dialogCornerRadius</item>
        <item name="android:alertDialogTheme">@*android:style/Theme.DeviceDefault.Dialog.Alert</item>
        <!-- Text styles -->
        <item name="android:textAppearanceButton">@*android:style/TextAppearance.DeviceDefault.Widget.Button</item>
        <!-- Button styles -->
        <item name="android:buttonCornerRadius">@*android:dimen/config_buttonCornerRadius</item>
        <item name="android:buttonBarButtonStyle">@*android:style/Widget.DeviceDefault.Button.ButtonBar.AlertDialog</item>
        <!-- Progress bar attributes -->
        <item name="*android:colorProgressBackgroundNormal">@*android:color/config_progress_background_tint</item>
        <item name="*android:progressBarCornerRadius">@*android:dimen/config_progressBarCornerRadius</item>
        <!-- Toolbar attributes -->
        <item name="android:toolbarStyle">@*android:style/Widget.DeviceDefault.Toolbar</item>
    </style>

    <style name="Theme.Material.Settings.NoActionBar"
        parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorSecondary">@*android:color/secondary_material_settings</item>
        <item name="android:presentationTheme">@*android:style/Theme.Material.Settings.Dialog.Presentation</item>
        <item name="*android:searchDialogTheme">@*android:style/Theme.Material.Settings.SearchBar</item>
        <item name="*android:panelMenuListTheme">@*android:style/Theme.Material.Settings.CompactMenu</item>
    </style>

    <style name="Theme.Material.Settings.BaseDialog"
        parent="@*android:style/Theme.Material.BaseDialog">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorSecondary">@*android:color/secondary_material_settings</item>
    </style>

    <style name="Theme.Material.Settings.Dialog.BaseAlert"
        parent="@*android:style/Theme.Material.Dialog.BaseAlert">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorSecondary">@*android:color/secondary_material_settings</item>
    </style>

    <style name="Theme.Material.Settings.DialogWhenLarge"
        parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorSecondary">@*android:color/secondary_material_settings</item>
    </style>

    <style name="Theme.Material.Settings.DialogWhenLarge.NoActionBar"
        parent="@android:style/Theme.Material.DialogWhenLarge.NoActionBar">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorSecondary">@*android:color/secondary_material_settings</item>
    </style>

    <style name="Theme.Material.Settings.Dialog.Presentation"
        parent="@android:style/Theme.Material.Dialog.Presentation">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorSecondary">@*android:color/secondary_material_settings</item>
        <item name="colorBackground">@*android:color/background_holo_dark</item>
    </style>

    <style name="Theme.Material.Settings.SearchBar"
        parent="@*android:style/Theme.Material.SearchBar">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorSecondary">@*android:color/secondary_material_settings</item>
    </style>

    <style name="Theme.Material.Settings.CompactMenu"
        parent="@*android:style/Theme.Material.CompactMenu">
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorSecondary">@*android:color/secondary_material_settings</item>
    </style>

    <style name="Widget.DeviceDefault.Light.PopupWindow" parent="@android:style/Widget.Material.PopupWindow">
        <item name="android:colorBackground">@*android:color/holo_primary</item>
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffdddddd</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="Widget.Material.DatePicker" parent="@*android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">@*android:integer/date_picker_mode_material</item>
        <item name="*android:legacyLayout">@*android:layout/date_picker_legacy_holo</item>
        <item name="android:calendarViewShown">true</item>
        <!-- Attributes for new-style DatePicker. -->
        <item name="*android:internalLayout">@*android:layout/date_picker_material</item>
        <item name="*android:headerTextColor">@*android:color/primary_text_secondary_when_activated_material</item>
        <item name="android:headerBackground">@*android:color/holo_primary</item>
    </style>

    <style name="Widget.Material.TimePicker" parent="@*android:style/Widget.Material.TimePicker">
        <item name="android:timePickerMode">@*android:integer/time_picker_mode_material</item>
        <item name="*android:legacyLayout">@*android:layout/time_picker_legacy_material</item>
        <!-- Attributes for new-style TimePicker. -->
        <item name="*android:internalLayout">@*android:layout/time_picker_material</item>
        <item name="*android:headerTextColor">@*android:color/primary_text_secondary_when_activated_material</item>
        <item name="android:headerBackground">@*android:color/holo_primary</item>
        <item name="android:numbersTextColor">@*android:color/primary_text_dark</item>
        <item name="android:numbersInnerTextColor">@*android:color/secondary_text_dark</item>
        <item name="android:numbersSelectorColor">?android:attr/colorControlActivated</item>
        <item name="android:numbersBackgroundColor">@*android:color/holo_primary</item>
        <item name="android:amPmTextColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Variant of {@link #Theme_DeviceDefault} with no action bar -->
    <style name="Theme.DeviceDefault.NoActionBar" parent="@*android:style/Theme.Material.NoActionBar">
        <!-- Color palette -->
        <item name="android:colorPrimary">@*android:color/holo_primary</item>
        <item name="android:colorPrimaryDark">@*android:color/holo_primary_dark</item>
        <item name="android:colorAccent">@*android:color/holo_blue_bright</item>
        <item name="android:colorError">@*android:color/error_color_device_default_dark</item>

        <!-- Dialog attributes -->
        <item name="android:dialogCornerRadius">@*android:dimen/config_dialogCornerRadius</item>
        <item name="android:alertDialogTheme">@*android:style/Theme.DeviceDefault.Dialog.Alert</item>

        <!-- Text styles -->
        <item name="android:textAppearanceButton">@*android:style/TextAppearance.DeviceDefault.Widget.Button</item>

        <!-- Button styles -->
        <item name="android:buttonCornerRadius">@*android:dimen/config_buttonCornerRadius</item>
        <item name="android:buttonBarButtonStyle">@*android:style/Widget.DeviceDefault.Button.ButtonBar.AlertDialog</item>

        <!-- Progress bar attributes -->
        <item name="*android:colorProgressBackgroundNormal">@*android:color/config_progress_background_tint</item>
        <item name="*android:progressBarCornerRadius">@*android:dimen/config_progressBarCornerRadius</item>

        <!-- Toolbar attributes -->
        <item name="android:toolbarStyle">@*android:style/Widget.DeviceDefault.Toolbar</item>
    </style>

</resources>
