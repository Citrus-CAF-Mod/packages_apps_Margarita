<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@*com.android.documentsui:dimen/bottom_bar_height"
    android:baselineAligned="false"
    android:gravity="end"
    android:orientation="horizontal"
    android:paddingEnd="@*com.android.documentsui:dimen/bottom_bar_padding_end"
    android:background="@*com.android.documentsui:color/primary">

    <TextView
        android:id="@android:id/button2"
        style="@*com.android.documentsui:style/BottomBarButton"
        android:layout_width="@*com.android.documentsui:dimen/bottom_bar_negative_button_width"
        android:background="@android:color/transparent"
        android:text="@android:string/cancel"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@android:id/button1"
        style="@*com.android.documentsui:style/BottomBarButton"
        android:layout_width="@*com.android.documentsui:dimen/bottom_bar_positive_button_width"
        android:layout_marginStart="@*com.android.documentsui:dimen/bottom_bar_positive_button_margin_start"
        android:background="@*com.android.documentsui:drawable/bottom_bar_positive_button_background"
        android:elevation="@*com.android.documentsui:dimen/bottom_bar_positive_button_elevation"
        android:textColor="@*android:color/holo_blue_bright" />
</LinearLayout>
